{
  "compilerOptions": {
    "target": "es6",
    "rootDir": "src",
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
